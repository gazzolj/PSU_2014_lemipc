void		move_left(char *map, char team, int pos)
{
  map[pos - 1] = team;
  map[pos] = '.';
}

void		move_right(char *map, char team, int pos)
{
  map[pos + 1] = team;
  map[pos] = '.';
}

void		move_up(char *map, char team, int pos)
{
  map[pos - 30] = team;
  map[pos] = '.';
}

void		move_down(char *map, char team, int pos)
{
  map[pos + 30] = team;
  map[pos] = '.';
}
