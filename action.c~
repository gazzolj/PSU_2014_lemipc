#include <unistd.h>
#include <stdio.h>

int		do_action(char *map, char team, char pos)
{
  printf("a\n");
  print_map(map);
  move_left(map, team, pos);
  print_map(map);
  sleep(1);
  move_right(map, team, pos);
  print_map(map);
  sleep(1);
  move_up(map, team, pos);
  print_map(map);
  sleep(1);
  move_down(map, team, pos); 
  print_map(map);
  return (0);
}
